<Window x:Class="Notes.TextNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="TextNoteWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="NameTxt" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Название Заметки" TextAlignment="Center" VerticalAlignment="Top" Width="800" />
        <RichTextBox x:Name="RichTxt" Margin="0,16,0,0"/>
        <Button Content="Сохранить заметку" HorizontalAlignment="Left" Margin="662,385,0,0" VerticalAlignment="Top" Click="Save"/>
        <Button Content="Сохранить снимок" HorizontalAlignment="Left" Margin="24,385,0,0" VerticalAlignment="Top" Width="115" Click="SaveCare"/>
        <Button Content="Загрузить предыдущий снимок" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="162,385,0,0" Click="LoadCare"/>
    </Grid>
</Window>
